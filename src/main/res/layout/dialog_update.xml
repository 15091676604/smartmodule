<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/float_transparent"
    android:fitsSystemWindows="true">


    <!--子布局控件-->
    <FrameLayout
        android:id="@+id/parent_02"
        android:layout_width="888px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="50px"
        android:background="@color/transparent_true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/header_02"
            android:layout_width="820px"
            android:layout_height="392px"
            android:layout_centerInParent="true"
            android:src="@drawable/bg_update" />

        <LinearLayout

            android:layout_width="888px"
            android:layout_height="140px"
            android:background="@color/transparent_true"
            android:orientation="horizontal">

            <View
                android:layout_width="785px"
                android:layout_height="1dp" />

            <View
                android:id="@+id/cancel"
                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_marginTop="60px"
                android:background="@drawable/icon_update_cancel" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="820px"
            android:layout_height="wrap_content"
            android:layout_marginRight="0px"
            android:layout_marginTop="392px"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center|left|top"
                android:maxLines="10"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="新版1.2邀您更新"
                android:textColor="@color/md_grey_600"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/updatedesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center|left|top"
                android:maxLines="10"
                android:paddingBottom="2dp"
                android:lineSpacingExtra="7dp"
                android:paddingTop="3dp"
                android:text="1.修复xxxbug\n2.更新UI界面\n3.修复xxxbug\n3.更新UI界面\n4.修复xxxbug\n邀您更新体验"
                android:textColor="@color/md_grey_600"
                android:textSize="17sp" />


            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                fancy:fb_borderColor="@color/md_green_400"
                fancy:fb_borderWidth="0dp"
                fancy:fb_defaultColor="@color/md_green_400"
                fancy:fb_focusColor="@color/md_green_500"
                fancy:fb_radius="0dp"
                fancy:fb_text="立即更新"
                fancy:fb_textColor="@color/md_white_1000"
                fancy:fb_textSize="20sp" />

        </LinearLayout>


    </FrameLayout>


</FrameLayout>


